<h2>Follower Users</h2>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @followers.each do |followers| %>
      <tr>
        <td><%= image_tag followers.get_profile_image, size: '50x50' %></td>
        <td><%= followers.name %></td>
        <td>フォロー数: <%= followers.followings.count %></td>
        <td>フォロワー数: <%= followers.followers.count %></td>
        <td><%= link_to 'Show', followers %></td>
      </tr>
    <% end %>
  </tbody>
</table>