<h2>Follow Users</h2>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @followings.each do |following| %>
      <tr>
        <td><%= image_tag following.get_profile_image, size: '50x50' %></td>
        <td><%= following.name %></td>
        <td>フォロー数: <%= following.followings.count %></td>
        <td>フォロワー数: <%= following.followers.count %></td>
        <td><%= link_to 'Show', following %></td>
      </tr>
    <% end %>
  </tbody>
</table>