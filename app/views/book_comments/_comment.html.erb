<!--部分テンプレートには、ローカル変数(@のインスタンス変数は使用しない)-->

<div>
  <% book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></p>
    <%= book_comment.user.name %>
    <%= book_comment.comment %>
    <!--投稿日時：%= book_comment.created_at.strftime('%Y/%m/%d') % -->
    <% if book_comment.user == current_user %>
      <%= link_to "削除", book_book_comment_path(book_comment.user, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
    <% end %>
  <% end %>
</div>

<div class="form-group">
  <%= form_with model:book_comment, url: book_book_comments_path(current_user.id) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>