<div>
  <% book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
    <%= book_comment.user.name %>
    <!--投稿日時：%= book_comment.created_at.strftime('%Y/%m/%d') % %= book_comment.comment %-->
    <% if book_comment.user == current_user %>
      <%= link_to "削除", user_book_comment_path(book_comment.user, book_comment), method: :delete %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_with model:book_comment, url: user_book_comments_path(current_user.id) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>