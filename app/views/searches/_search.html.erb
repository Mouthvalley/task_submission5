<% if user_signed_in? %>
  <div class="searches_form">
      <!--url: search_path＝検索内容を、先ほど作成したルーティングに送信-->
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :content %>
        <!--今回は複数のモデル(UserモデルとBookモデル)を検索できるように実装する為、選択したモデルをmodelとしてアクションに送っている。-->
      <%= f.select :model, options_for_select({ "User" => "user", "Book" => "book" }) %>
        <!--検索手法を定義(カンマ区切りで複数定義)。選択した検索手法をmethodとしてアクションに送っている。-->
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>